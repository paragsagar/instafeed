<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/ivUserProfileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/ivInstaPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ivUserProfileImage"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tvUsername_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ivInstaPhoto"
        android:layout_marginTop="20dp"
        android:shadowColor="#0B90B8"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:text="username"
        android:textColor="#0B90B8" />

    <TextView
        android:id="@+id/tvLikeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ivInstaPhoto"
        android:textSize="12sp"
        android:drawableLeft="@drawable/likes"
        android:drawablePadding="5sp"
        android:textColor="#0B90B8"
	    android:shadowColor="#0B90B8"
	    android:shadowRadius="1.5"
	    android:shadowDx="1"
	    android:shadowDy="1"        
        android:text="Likes" />

    <TextView
        android:id="@+id/tvTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvUserLocation"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/time"
        android:drawablePadding="5sp"
        android:shadowColor="#DBDBDB"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:text="Create relative date"
        android:textColor="#DBDBDB"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvUsername_caption"
        android:layout_alignBottom="@+id/tvUsername_caption"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/tvUsername_caption"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="image caption" />

    <TextView
        android:id="@+id/tvUserLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvUserName"
        android:layout_below="@+id/tvUserName"
        android:text="User Location" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivUserProfileImage"
        android:shadowColor="#0B90B8"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:text="User Name"
        android:textColor="#0B90B8" />

</RelativeLayout>
